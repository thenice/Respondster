<div id = "editing-hotel-booking">
  <%= form_for(hotel_booking, :remote => true) do |f| %>
    <% if hotel_booking.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@hotel_booking.errors.count, "error") %> prohibited this hotel_booking from being saved:</h2>

        <ul>
        <% hotel_booking.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <!-- fields -->
    <div class = "editing-content">
      <%= f.text_field :guest_name, :size => 30 %><br />
      <strong>Guest Names</strong><br />
      <br />

      <%= f.text_field :hotel_name, :size => 30 %><br />
      <strong>Hotel Name</strong><br />
      <br />

      <%= f.date_select :check_in %><br />
      <strong>Check In</strong><br />
      <br />

      <%= f.date_select :check_out %><br />
      <strong>Check Out</strong><br />
      <br />
      <%= select( "hotel_booking", "status", ["Booked", "Reserved", "Planning on it"]) %>
      <br />
      <strong>Booking Status</strong><br />
      <br />
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
    <!-- /fields-->
  <% end %>
</div>