<h1>Listing flights</h1>

<table>
  <tr>
    <th>Guest</th>
    <th>Passenger name</th>
    <th>Airline</th>
    <th>Flight number</th>
    <th>Departure city</th>
    <th>Arrival city</th>
    <th>Departure time</th>
    <th>Arrival time</th>
    <th>Inbound</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.guest_id %></td>
    <td><%= flight.passenger_name %></td>
    <td><%= flight.airline %></td>
    <td><%= flight.flight_number %></td>
    <td><%= flight.departure_city %></td>
    <td><%= flight.arrival_city %></td>
    <td><%= flight.departure_time %></td>
    <td><%= flight.arrival_time %></td>
    <td><%= flight.inbound %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

